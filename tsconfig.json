{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "typeRoots": ["./global.d.ts", "./node_modules/@types"]
  },
  "include": ["src/**/*"]
}
